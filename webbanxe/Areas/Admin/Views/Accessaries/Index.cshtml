@model IEnumerable<webbanxe.Models.Accessary>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Accessaries</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Home</a></li>
                <li class="breadcrumb-item"><a>Accessaries</a></li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <p>
        <a asp-action="CreateOrUpdate" asp-controller="Accessaries">Thêm phụ tùng - phụ kiên</a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NameAccessary)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DescriptionAccessary)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageAccessary)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PricePromotion)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameAccessary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DescriptionAccessary)
                                </td>
                                
                                <td>
                                        @foreach (var i in item.ImageAccessary.Split(";"))
                                        {
                                        <img src="~/img/@i" width="100px" height="100px">
                                        }
                                </td>
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PricePromotion)
                                </td>
                                <td>
                                    <a asp-action="CreateOrUpdate" asp-route-id="@item.IdAccessary">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdAccessary">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdAccessary">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>