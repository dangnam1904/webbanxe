@model webbanxe.Models.ModelView.ViewBike
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<script src="~/ckeditor/ckeditor.js"></script> 

<main id="main" class="main">

    <div class="pagetitle">
        <h1> Bike</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Home</a></li>
                <li class="breadcrumb-item"><a>Bike</a></li>
                <li class="breadcrumb-item active">Add</li>
            </ol>
        </nav>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="CreateOrUpdate" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Bike.IdBike" type="hidden" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Bike.NameBike" class="control-label"></label>
                        <input asp-for="Bike.NameBike" class="form-control" />
                        <span asp-validation-for="Bike.NameBike" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bike.price" class="control-label"></label>
                        <input asp-for="Bike.price" class="form-control" />
                        <span asp-validation-for="Bike.price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bike.PricePromotion" class="control-label"></label>
                        <input asp-for="Bike.PricePromotion" class="form-control" />
                        <span asp-validation-for="Bike.PricePromotion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bike.Quantity" class="control-label"></label>
                        <input asp-for="Bike.Quantity" class="form-control" />
                        <span asp-validation-for="Bike.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bike.ImageBike" class="control-label"></label>
                        <input asp-for="Bike.ImageFile" type="file" multiple accept="image/*" class="form-control" />
                        <span asp-validation-for="Bike.ImageBike" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bike.DescriptionBike" class="control-label"></label>
                        <textarea asp-for="Bike.DescriptionBike" class="form-control" ></textarea>
                        <span asp-validation-for="Bike.DescriptionBike" class="text-danger"></span>
                        <script>
                            CKEDITOR.replace("Bike.DescriptionBike");
                        </script>

                    </div>
                    <div class="form-group">
                        <label class="control-label">Loại xe</label>
                        <select asp-for="Bike.IdType" asp-items="ViewBag.TypeBike" class="form-select form-control">
                            <option disabled onselect=""> Chọn loại </option>
                        </select>
                    </div>
                
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </section>

   
</main>


