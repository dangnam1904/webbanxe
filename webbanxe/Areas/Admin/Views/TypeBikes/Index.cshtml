@model IEnumerable<webbanxe.Models.TypeBike>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<main id="main" class="main">
   
    <div class="pagetitle">
        <h1>Type Bike</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Home</a></li>
                <li class="breadcrumb-item"><a>TypeBike</a></li>
                <li class="breadcrumb-item active">Add</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NameType)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NameType)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdType">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdType">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdType">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                   
                </div>
            </div>
        </div>
    </section>

</main>
