@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/cart.css" rel="stylesheet">
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Blog list Start -->
            <div class="col-lg-12">
                <div class="row">
                    <div class="column">
                        <table>

                            <tr>
                               
                                <th>STT</th>
                                <th>Tên xe</th>
                                <th>Số lượng</th>
                                <th> Giá thành</th>
                                <th>Thành tiền</th>
                                <th>Hành động</th>
                            </tr>
                            @foreach (var item in ViewBag.ListCart)
                            {

                                <tr>
                                    <td>@item.Cart.IdCart</td>
                                    <td>@item.Bike.NameBike</td>
                                    <td> <input value="@item.Cart.QuantityPurchased" name="QuantityPurchased" id="QuantityPurchased" type="number" onchange="changeNumber()"> </td>
                                    <td id="price">@((item.Bike.price * item.Bike.PricePromotion)) vnđ</td>
                                    <td id="thanhtien">@((item.Bike.price * item.Bike.PricePromotion).ToString("#,##0.0")) vnđ</td>
                                    <td> <a href="#"> Lưu </a> &ensp; <a href="#"> Xóa  &ensp; <a href="#"> Thanh toán </a></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script>
        function changeNumber() {
           var numberChange = document.getElementById("QuantityPurchased").value;
            var price = parseInt(document.getElementById("price").innerText);
            var result= numberChange*price
            var resultConver = result.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
            console.log(resultConver)
            document.getElementById("thanhtien").innerText = resultConver;
        }
    </script>
