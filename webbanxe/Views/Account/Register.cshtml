
@{
    ViewData["Title"] = "Register";
}
@model User;
<section class="vh-100" style="background:#c6c7cf">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1" style="padding-top: 3rem">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(x=> x.DisplayName, new { @class="form-control form-control-lg",
                    placeholder="Nhập tên hiển thị", id="form1Example13", style="font-size:16px", required="required" })
                        <label class="form-label" for="form1Example13">Tên hiển thị</label>
                        <span asp-validation-for="DisplayName"></span>
                    </div>
                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(x=> x.Phone, new { @class="form-control form-control-lg",
                    placeholder="Nhập số điện thoại", id="form1Example13", style="font-size:16px", required="required" })
                        <label class="form-label" for="form1Example13">Số điện thoại</label>
                    </div>

                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(x=> x.UserName, new { @class="form-control form-control-lg",
                    placeholder="Nhập tên đăng nhập", id="form1Example13", style="font-size:16px", required="required" })
                        <label class="form-label" for="form1Example13">Tên đăng nhập</label>
                    </div>

                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(x=> x.Password, new { @class="form-control form-control-lg",
                    placeholder="Nhập mật khẩu",type="password", id="form1Example23", style="font-size:16px",required="required"})

                        <label class="form-label" for="form1Example23">Mật khẩu</label>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input  class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Nhớ tôi </label>
                        </div>
                        <a href="#!">Quên mật khẩu</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block" style="width:100%">Đăng ký</button>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">HOẶC</p>
                    </div>

                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998; width:100% " href="./login"
                       role="button">
                        Đăng nhập
                    </a>
                }

            </div>
        </div>
    </div>
</section>
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>

